<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<form action="submit" class="login-form">
    <label for="account_email">Email:</label>
    <input type="email" name="account_email" id="accountEmail" required>

    <label for="account_password">Password:</label>
    <input type="password" name="account_password" id="accountPassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <p>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p> 

    <button type="submit">Login</button>
    <p class="registration-link">No account? <a href="/account/registration">Sign-up</a></p>
</form>