<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<form action="/inv/add-classification" method="post">
    <label for="classification_name">Classification Name:</label>
    <input type="text" name="classification_name" id="classification_name" required pattern="^[A-Za-z]+$" value="<%= locals.classification_name %>">
    <p>Name must be alphabetic characters only.</p>

    <button type="submit">Add Classification</button>
</form>